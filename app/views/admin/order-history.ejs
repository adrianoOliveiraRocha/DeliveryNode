<div class="card">
  <div class="card-header text-center">
    Histórico de Pedidos de <strong><%=user.userName%></strong>
  </div>
  <div class="card-body card-block">
    <% if(orders.length > 0) { %>
    <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Data</th>
          <th>Hora</th>
          <th>Total</th>												
        </tr>
      </thead>
      <tbody>	
        <% orders.forEach(order => { %>
          <tr>
            <td>
              <a href="#" title="Detalhes do pedido"
                onclick="Order.orderDetail('<%=order.id%>', '<%=user.userId%>')">
                <%=order._datetime.toLocaleDateString('pt-BR')%>
              </a>
            </td>	
            <td>
              <a href="#" title="Detalhes do pedido"
                onclick="Order.orderDetail('<%=order.id%>', '<%=user.userId%>')">
                <%=order._datetime.toLocaleTimeString('pt-BR')%>
              </a>
            </td>		
            <td>
              <a href="#" title="Detalhes do pedido"
                onclick="Order.orderDetail('<%=order.id%>', '<%=user.userId%>')">
                <%=order.total.toLocaleString('pt-br', {style: 'currency', currency: 'BRL'})%>
              </a>
            </td>											
          </tr>
        <% }) %>		
      </tbody>
      
    </table>
    <% } else { %>
    <h3 class="text-center text-danger">Esse usuário ainda não fez nenhum pedido</h3>
    <% } %>
    <hr>
    <div class="col-sm-3">
      <button type="button" class="add-cart-button form-control btn btn-info"
        onclick="Admin.userDetails('<%=user.userId%>');">
        Voltar</button>
        
    </div>
  </div>
</div>