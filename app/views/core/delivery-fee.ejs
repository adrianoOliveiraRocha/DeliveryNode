  </style>
  <script src="./app.js"></script>

  <!-- pwa -->
  <link rel="manifest" href="./manifest.json">
  <link rel="apple-touch-icon" href="core/images/system-images/icons/apple-icon-120.png">
  <meta name="apple-mobile-web-app-status-bar" content="#FFE1C4">
