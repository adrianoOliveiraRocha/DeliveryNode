<body onload="ShopingCart.verify(); installButton();">
  <div class="container-fluid">
    <!-- Navigation -->
    <%-include('include/nav-bar.ejs')%>
    <br>
    <div class="card">

      <div class="card-head">
        <%include('include/logo.ejs')%>
      </div>

      <div class="card-body">
        
        <button class="btn btn-info" id="enable-banner-install">
          Instalar
        </button>

        <br>

        <div class="container c3">

          <h1 class="container text-center c3">Taxa de Entrega</h1>
          <hr>
          <table class="table c3">
            <thead>
              <tr>
                <th>Bairro</th><th>Taxa</th>
              </tr>
            </thead>
            <tbody>
              <% for(nh of neighborhoods) { %>
              <tr>
                <td><%=nh.name%></td>
                <td><%=nh.delivery_fee.toLocaleString('pt-br', {style: 'currency', currency: 'BRL'})%></td>
              </tr>
              <% } %>
            </tbody>
          </table>


        </div>

      </div>

      <div class="card-footer text-center">
        
        w3software.br@gmail.com

      </div>

    </div>

    <%-include('include/bottom-links.ejs')%>

    <a href="/user-whatsapp-message"" title="Fale Conosco" class="wa-logo">
      <img src="admin/images/whatsapp.png" alt="offline" width="50px">
    </a>
        
  </div>

  <br>

  <%-include('include/footer.ejs')%>

  <script src="core/core.js"></script>

</body>

